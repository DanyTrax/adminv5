# Activar el motor de reescritura de URL
RewriteEngine On
DirectoryIndex index.php

# Si la URL solicitada no es un archivo existente
RewriteCond %{REQUEST_FILENAME} !-f
# Y si la URL solicitada no es un directorio existente
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todas las demás solicitudes a index.php
RewriteRule ^(.+)$ index.php?ruta=$1 [QSA,L]

# Headers de seguridad y cache optimizados para sucursales
<IfModule mod_headers.c>
    # Cache control para páginas dinámicas
    Header set Cache-Control "max-age=0,no-store"
    
    # Headers de seguridad
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS específico para API de transferencias (sincronización entre sucursales)
    <LocationMatch "^/api-transferencias/">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Header set Access-Control-Max-Age "3600"
    </LocationMatch>
</IfModule>

# Protección para archivos de configuración
<FilesMatch "\.(ini|conf|yml|yaml|json|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir acceso a archivos específicos necesarios
<Files "composer.json">
    Allow from all
</Files>

<Files ".cpanel.yml">
    Allow from all
</Files>

# Protección especial para conexiones de BD
<Files "conexion*.php">
    Order allow,deny
    Deny from all
</Files>

# Excepción para APIs de sincronización (necesario para comunicación entre sucursales)
<LocationMatch "^/api-transferencias/">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</LocationMatch>

# Optimización de compresión para sincronización masiva
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml
    
    # Comprimir respuestas AJAX grandes (útil para sincronización de catálogos)
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|ico)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Configuración de timeout extendido para sincronización de sucursales
<IfModule mod_reqtimeout.c>
    RequestReadTimeout header=300,MinRate=500 body=3600,MinRate=500
</IfModule>

# php -- BEGIN cPanel-generated handler, do not edit
