# Configuración específica para API de transferencias (sin LocationMatch)
<IfModule mod_rewrite.c>
    # Permitir CORS para sincronización entre sucursales
    RewriteCond %{REQUEST_URI} ^/api-transferencias/
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Restringir métodos HTTP no necesarios
    RewriteCond %{REQUEST_METHOD} ^(TRACE|DELETE|TRACK) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Variables de entorno para sistema multi-sucursal
<IfModule mod_env.c>
    SetEnv ADMIN_VERSION "5.0"
    SetEnv MULTI_SUCURSAL "enabled"
</IfModule>
