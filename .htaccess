# Activar el motor de reescritura de URL
RewriteEngine On
DirectoryIndex index.php
# Si la URL solicitada no es un archivo existente
RewriteCond %{REQUEST_FILENAME} !-f
# Y si la URL solicitada no es un directorio existente
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todas las demás solicitudes a index.php
RewriteRule ^(.+)$ index.php?ruta=$1 [QSA,L]
<IfModule mod_headers.c>
Header set Cache-Control "max-age=0,no-store"
</IfModule>

